---
import Layout from '../layouts/Default.astro'
import Navbar from '../components/Navbar.astro'
import NavbarClone from '../components/NavbarClone.astro'
const title = 'IT Services for Small Businesses in Ontario'
---

<Layout title={title}>
  <section class="hero is-fullheight is-grey">
    <Navbar />

    <NavbarClone />

    <div class="hero-body">
      <div class="container">
        <div class="columns is-vcentered">
          <div class="column is-5 landing-caption">
            <h1 class="title is-1 is-bold is-spaced">Reliable tech support and automation for small businesses in Northern Ontario.</h1>
            <h2 class="subtitle is-5 is-muted"> We handle your digital setup — from email and websites to backups and workflows — so you can focus on your clients.</h2>
            <div>
              <a href="#book-call" class="button cta primary-btn raised mr-2"> Schedule a Free 30-Min Call </a>
              <!-- <a class="button cta"> Get a Free IT Audit</a> -->
            </div>
          </div>
          <div class="column is-7">
            <div class="hero-image-composition-1">
              <div class="image-wrap">
                <img class="curly-image" src={`${import.meta.env.BASE_URL}img/illustrations/real-hero.jpg`} alt="Female entrepreneur working on laptop">

                <!-- Floating box 1 -->
                <div class="floating-box floating-box-1">
                  <div class="floating-box-content">
                    <div class="icon-header">
                      <div class="pastel-icon is-success">
                        <i class="fas fa-wallet"></i>
                      </div>
                      <span class="header-text">Revenue</span>
                      <div class="header-stat is-positive">
                        <span>+12.4%</span>
                      </div>
                    </div>
                    <div class="inner-text-content">
                      <p>You revenue is constantly improving over the last months.</p>
                    </div>
                  </div>
                </div>

                <!-- Floating box 2 -->
                <div class="floating-box floating-box-2">
                  <div class="floating-box-content">
                    <div class="icon-block">
                      <div class="pastel-icon is-info">
                        <i class="fas fa-coins"></i>
                      </div>
                      <div class="block-text">
                        <span class="block-title">$4529</span>
                        <span class="block-subtitle">Revenue earned</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="hero-foot mb-20">
      <div class="container">
        <div class="tabs is-centered">
          <ul>
            <li>
              <a><img class="partner-logo" src={`${import.meta.env.BASE_URL}img/logo/clients/google-workspace.svg`} alt="Google Workspace" /></a>
            </li>
            <li>
              <a><img class="partner-logo" src={`${import.meta.env.BASE_URL}img/logo/clients/microsoft-365.svg`} alt="Microsoft 365" /></a>
            </li>
            <li>
              <a><img class="partner-logo" src={`${import.meta.env.BASE_URL}img/logo/clients/dropbox.svg`} alt="Dropbox" /></a>
            </li>
            <li>
              <a><img class="partner-logo" src={`${import.meta.env.BASE_URL}img/logo/clients/xero.svg`} alt="Xero" /></a>
            </li>
            <li>
              <a><img class="partner-logo" src={`${import.meta.env.BASE_URL}img/logo/clients/zapier.svg`} alt="Zapier" /></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class="section is-medium" id="services">
  <div class="container">
    <div class="title-wrapper has-text-centered">
      <h2 class="title is-2">What We Offer</h2>
      <h3 class="subtitle is-5 is-muted">Friendly tech services to keep your business running smoothly</h3>
      <div class="divider is-centered"></div>
    </div>

    <div class="feature-cards content-wrapper">
      <div class="columns is-multiline">

        <!-- Ongoing Tech Help -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon">
              <i class="fa-solid fa-screwdriver-wrench fa-2x"></i>
            </div>
            <div class="card-title"><h4>Ongoing Tech Help</h4></div>
            <div class="card-text"><p>Get fast help when your tools, email, or Wi-Fi aren’t working.</p></div>
          </div>
        </div>

        <!-- Cloud Setup -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-cloud fa-2x"></i></div>
            <div class="card-title"><h4>Cloud Setup</h4></div>
            <div class="card-text"><p>We set up Google Drive, OneDrive, or Dropbox so your files are easy to find and share.</p></div>
          </div>
        </div>

        <!-- Security & Backups -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-shield-halved fa-2x"></i></div>
            <div class="card-title"><h4>Security & Backups</h4></div>
            <div class="card-text"><p>Antivirus and weekly backups to keep your data and devices safe.</p></div>
          </div>
        </div>

        <!-- Website Help -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-globe fa-2x"></i></div>
            <div class="card-title"><h4>Website Help</h4></div>
            <div class="card-text"><p>We make sure your site runs fast, stays online, and keeps your leads flowing.</p></div>
          </div>
        </div>

        <!-- Automations -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-gears fa-2x"></i></div>
            <div class="card-title"><h4>Automations</h4></div>
            <div class="card-text"><p>We connect your forms, calendars, emails, and CRMs so things happen automatically.</p></div>
          </div>
        </div>

        <!-- AI Tools -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-robot fa-2x"></i></div>
            <div class="card-title"><h4>AI Tools</h4></div>
            <div class="card-text"><p>Get smart digests, email drafts, and summaries of your leads — no extra typing.</p></div>
          </div>
        </div>

        <!-- SEO Visibility -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-chart-line fa-2x"></i></div>
            <div class="card-title"><h4>SEO Visibility</h4></div>
            <div class="card-text"><p>We help your business show up better on Google to attract local customers.</p></div>
          </div>
        </div>

        <!-- Workstation Setup -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-laptop fa-2x"></i></div>
            <div class="card-title"><h4>Workstation Setup</h4></div>
            <div class="card-text"><p>We set up your computer or device so it’s secure and ready to work.</p></div>
          </div>
        </div>

        <!-- 24/7 Monitoring & Maintenance -->
        <div class="column is-one-third" style="display: flex;">
          <div class="feature-card is-bordered has-text-centered is-feature-reveal" style="width: 100%;">
            <div class="card-icon"><i class="fa-solid fa-mobile-screen-button fa-2x"></i></div>
            <div class="card-title"><h4>24/7 Monitoring & Maintenance</h4></div>
            <div class="card-text"><p>We keep watch on your tech around the clock and fix issues before they cause problems.</p></div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

 <section class="section is-medium" id="book-call">
  <div class="container">
    <div class="title-wrapper has-text-centered">
      <h2 class="title is-2">📅 Book a Free 30-Min IT Audit</h2>
      <h3 class="subtitle is-5 is-muted">
        Choose a time that works for you — no back-and-forth emails.
      </h3>
      <div class="divider is-centered"></div>
    </div>

    <div class="calendly-wrapper" style="max-width: 100%; margin: 0 auto;">
      <!-- Calendly inline widget begin -->
      <div class="calendly-inline-widget" data-url="https://calendly.com/larinni/new-meeting" style="min-width:320px;height:700px;"></div>
      <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      <!-- Calendly inline widget end -->
    </div>
  </div>
</section>
  <section class="section is-medium">
    <div class="container">
      <div class="columns is-vcentered">
        <!-- Left side: photo -->
        <div class="column is-5 has-text-centered-touch">
          <figure class="image" style="max-width: 100%; margin: 0 auto;">
            <img
              src={`${import.meta.env.BASE_URL}img/logo/bio_larinni.jpg`}
              alt="Larinni Malheiros"
              style="border-radius: 12px; box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);"
            />
          </figure>
        </div>
        <!-- Right side: text -->
        <div class="column is-7">
          <h2 class="title is-2">Meet Larinni</h2>
          <h3 class="subtitle is-5 is-muted">Founder of 705Digital</h3>
          <p class="mb-4">
            I'm Larinni — a software engineer, former IT instructor at Cambrian College, and systems analyst at Glencore.
            I’ve spent over 10 years helping businesses make technology work for them.
          </p>
          <p class="mb-4">
            I created 705Digital to support women-led businesses and service providers with modern, reliable, and non-overwhelming IT support.
          </p>
          <p>📍 Based in Sudbury · Serving clients across Ontario and beyond</p>
          <div class="buttons mt-4">
            <a href="mailto:info@705digital.ca" class="button is-info is-light">
              <span class="icon">
                <i class="fas fa-envelope"></i>
              </span>
              <span>Email Me</span>
            </a>

            <a href="https://linkedin.com/in/larinni" class="button is-link is-light" target="_blank">
              <span class="icon">
                <i class="fab fa-linkedin"></i>
              </span>
              <span>LinkedIn</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section id="pricing" class="section is-medium">
    <div class="container">
      <div class="title-wrapper has-text-centered">
        <h2 class="title is-2">💼 705Digital Plans — What's Included</h2>
        <h3 class="subtitle is-5 is-muted">
          All plans are tailored for small businesses that want less tech stress and more time to focus on what they do best.
        </h3>
        <div class="divider is-centered"></div>
      </div>

      <div class="pricing-wrap">
        <!-- Starter Plan -->
        <div class="feature-card is-pricing has-text-centered">
          <h3 class="plan-name">Starter</h3>
          <img src={`${import.meta.env.BASE_URL}img/illustrations/pricing/1.svg`} alt="Starter Plan" />
          <div class="price">From $300</div>
          <p class="mb-4">For solo business owners 👩‍💼 who need reliable tech support and peace of mind.</p>
          <ul class="has-text-left px-5" style="font-size: 0.95rem;">
            <li class="mt-3"><strong>Tech Support & Setup</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Remote help during business hours</li>
                <li>Email setup & troubleshooting</li>
                <li>Workstation setup for 1–2 devices</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Cloud & Backup</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Google Drive, OneDrive, or Dropbox setup</li>
                <li>Weekly document backups</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Security & Monitoring</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Basic antivirus</li>
                <li>Website uptime & contact form checks</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Reporting</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Monthly “Digital Health” email</li>
              </ul>
            </li>
          </ul>
          <a href="https://calendly.com/larinni/new-meeting" target="_blank" class="button is-fullwidth is-bold mt-4">Get Started</a>
        </div>

        <!-- Smart Business Plan -->
        <div class="feature-card is-pricing has-text-centered">
          <h3 class="plan-name">Smart Business</h3>
          <img src={`${import.meta.env.BASE_URL}img/illustrations/pricing/2.svg`} alt="Smart Business Plan" />
          <div class="tag is-primary is-light is-rounded mb-2">Most Popular</div>
          <div class="price">From $500</div>
          <p class="mb-4">For growing teams 👥 who want smoother workflows and a stronger online presence.</p>
          <ul class="has-text-left px-5" style="font-size: 0.95rem;">
            <li><strong>Everything in Starter</strong></li>
            <li class="mt-3"><strong>Cloud Collaboration</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Shared folders & access permissions</li>
                <li>Google Workspace or Microsoft 365 (up to 5 users)</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Workflow Automation</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Online booking → calendar sync</li>
                <li>Welcome email automations</li>
                <li>CRM or Google Sheets lead tracking</li>
                <li>Follow-up reminders</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Website Help</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Content updates & plugin checks</li>
                <li>Contact form troubleshooting</li>
                <li>Domain/email/hosting support</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Security & Access</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Password manager setup</li>
                <li>Backup & recovery assistance</li>
              </ul>
            </li>
          </ul>
          <a href="https://calendly.com/larinni/new-meeting" target="_blank" class="button is-fullwidth primary-btn raised is-bold mt-4">Get Started</a>
        </div>

        <!-- Pro Digital Plan -->
        <div class="feature-card is-pricing has-text-centered">
          <h3 class="plan-name">Pro Digital</h3>
          <img src={`${import.meta.env.BASE_URL}img/illustrations/pricing/3.svg`} alt="Pro Digital Plan" />
          <div class="price">From $800</div>
          <p class="mb-4">For ambitious businesses 🚀 ready to grow online and automate intelligently.</p>
          <ul class="has-text-left px-5" style="font-size: 0.95rem;">
            <li><strong>Everything in Smart Business</strong></li>
            <li class="mt-3"><strong>SEO & Visibility</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>SEO health reports</li>
                <li>Keyword tracking</li>
                <li>Google Business optimization</li>
                <li>Search Console insights</li>
                <li>Local ranking monitoring</li>
              </ul>
            </li>
            <li class="mt-3"><strong>AI & Digital Automation</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>AI-generated lead summaries</li>
                <li>Weekly activity digests (leads, forms, bookings)</li>
                <li>Auto follow-up replies & templates</li>
                <li>Smart chatbot integration (optional)</li>
                <li>Checklist generation (Notion, Trello, etc.)</li>
              </ul>
            </li>
            <li class="mt-3"><strong>Advanced Protection</strong>
              <ul style="list-style-type: disc; margin-left: 1.2rem;">
                <li>Dark web scan alerts</li>
                <li>Secure access control planning</li>
                <li>Support for up to 10 users/devices</li>
              </ul>
            </li>
          </ul>
          <a href="https://calendly.com/larinni/new-meeting" target="_blank" class="button is-fullwidth is-bold mt-4">Get Started</a>
        </div>
      </div>
    </div>
  </section>
  <section class="section section-light-grey is-medium" id="contact-us">
    <div class="container">
      <div class="title-wrapper has-text-centered">
        <h2 class="title is-2 is-spaced">Let's talk about your tech needs</h2>
        <h3 class="subtitle is-5 is-muted">We'll follow up with next steps for your business.</h3>
        <div class="divider is-centered"></div>
      </div>

      <div class="content-wrapper">
        <div class="columns">
          <div class="column is-6 is-offset-3">
            <form action="https://formspree.io/f/xjkogndj" method="POST">
              <div class="columns is-multiline">
                <div class="column is-6">
                  <input class="input is-medium" type="text" name="first_name" placeholder="First Name *" required />
                </div>
                <div class="column is-6">
                  <input class="input is-medium" type="text" name="last_name" placeholder="Last Name *" required />
                </div>
                <div class="column is-6">
                  <input class="input is-medium" type="email" name="email" placeholder="Email *" required />
                </div>
                <div class="column is-6">
                  <input class="input is-medium" type="text" name="company" placeholder="Company" />
                </div>
                <div class="column is-12">
                  <textarea class="textarea" name="message" rows="6" placeholder="How can we help?" required></textarea>
                </div>
                <div class="column is-12">
                  <div class="form-footer has-text-right mt-10">
                    <button class="button cta is-large primary-btn form-button raised is-clear" type="submit">
                      Request a Free Consult
                    </button>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

  <div id="auth-modal" class="modal">
    <div class="modal-background modal-dismiss"></div>
    <div class="modal-content">
      <div class="flex-card auth-card">
        <div class="tabs-wrapper">
          <div class="tabs">
            <ul>
              <li class="is-active" data-tab="login-tab"><a>Login</a></li>
              <li data-tab="register-tab"><a>Register</a></li>
            </ul>
          </div>
          <div id="login-tab" class="tab-content is-active">
            <div class="field">
              <label>Username</label>
              <div class="control">
                <input type="text" class="input is-medium" placeholder="Enter username" />
              </div>
            </div>
            <div class="field">
              <label>Password</label>
              <div class="control">
                <input type="password" class="input is-medium" placeholder="Enter password" />
              </div>
            </div>

            <a class="button is-fullwidth secondary-btn is-rounded raised">Log in</a>
          </div>
        </div>
      </div>
    </div>
    <button class="modal-close is-large modal-dismiss" aria-label="close"></button>
  </div>
</Layout>
